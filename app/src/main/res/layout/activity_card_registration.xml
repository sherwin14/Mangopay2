<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp">

    <TextView
        android:text="CARD REGISTRATION"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="25sp"
        android:paddingBottom="5dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CARD NUMBER"
        android:ems="10"
        android:textColorHint="@color/cardview_shadow_start_color"
        android:id="@+id/etCardNumber"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_payment"
        android:imeOptions="actionNext"
        android:maxLines="1"
        android:inputType="textPersonName"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="USERNAME"
        android:textColorHint="@color/cardview_shadow_start_color"
        android:ems="10"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_face"
        android:imeOptions="actionNext"
        android:inputType="textEmailAddress"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:ems="10"
        android:textColorHint="@color/cardview_shadow_start_color"
        android:id="@+id/editText"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_lock"
        android:imeOptions="actionNext"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="CONFIRM PASSWORD"
        android:textColorHint="@color/cardview_shadow_start_color"
        android:ems="10"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_lock"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/spinner"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="SECRET ANSWER"
        android:textColorHint="@color/cardview_shadow_start_color"
        android:ems="10"
        android:imeOptions="actionNext"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/spinner1"
            android:layout_weight="1"
            />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/spinner2"
            android:layout_weight="1" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/spinner3"
            android:layout_weight="1" />
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CONTACT NUMBER"
        android:textColorHint="@color/cardview_shadow_start_color"
        android:ems="10"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_contact_phone"
        android:imeOptions="actionNext"
        android:inputType="phone"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ADDRESS"
        android:textColorHint="@color/cardview_shadow_start_color"
        android:ems="10"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_business"
        android:imeOptions="actionSend"
        android:inputType="text"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="CONTINUE"
            android:textColor="@color/colorLight"
            android:background="@color/colorPrimaryGreen"
            android:id="@+id/btnContinue"
            android:textSize="17sp"
            android:layout_weight="1"
            />
        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="CANCEL"
            android:textColor="@color/colorLight"
            android:background="@color/colorPrimaryGreen"
            android:id="@+id/btnCancel"
            android:textSize="17sp"
            android:layout_weight="1"
            />
    </LinearLayout>
</LinearLayout>
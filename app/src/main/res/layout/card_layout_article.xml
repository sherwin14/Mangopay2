<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_recent_violator"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="1dp"
    android:layout_margin="5dp"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEW"
            android:textColor="@color/colorLight"
            android:background="@color/colorPrimaryGreen"
            android:id="@+id/tag_new"
            android:textSize="12sp"
            android:padding="2dp"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="BEST RESTO \nFOOD  MORE"
            android:layout_below="@id/tag_new"
            android:paddingTop="3dp"
            android:textSize="15dp"
            android:id="@+id/article_title"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/article_decription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/article_title"
            android:text="Lorem ipsum is \nsimply summy..."
            android:textSize="12sp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/article_image"
            android:src="@drawable/bora1"
            android:scaleType="fitXY"
            android:layout_toEndOf="@+id/article_title"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/article_decription" />
    </RelativeLayout>
</android.support.v7.widget.CardView>